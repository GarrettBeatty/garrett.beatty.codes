---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Projects - Garrett Beatty">
  <div class="projects-content">
    <div class="section-header">
      <span class="section-label">Featured Work</span>
      <div class="section-line"></div>
    </div>

    <article class="project-item">
      <div class="project-number">01</div>
      <div class="project-main">
        <div class="project-meta">
          <span class="project-year">2023</span>
          <span class="meta-divider">·</span>
          <span class="project-type">Android Application</span>
        </div>
        <h3 class="project-name">Arxiv Explorer</h3>
        <p class="project-description">
          Android application with over 6,000 downloads that allows users to browse, search, and download
          scientific papers from arxiv.org.
        </p>
        <div class="project-tech">
          <span>Java</span>
          <span>Butterknife</span>
          <span>OkHttp</span>
          <span>Sugar ORM</span>
          <span>arXiv API</span>
          <span>Travis CI</span>
          <span>Fastlane</span>
        </div>
      </div>
    </article>

    <article class="project-item">
      <div class="project-number">02</div>
      <div class="project-main">
        <div class="project-meta">
          <span class="project-year">2022</span>
          <span class="meta-divider">·</span>
          <span class="project-type">Web Application</span>
        </div>
        <h3 class="project-name">Steganography Web Application</h3>
        <p class="project-description">
          Web application that allows users encode and decode secret messages within an image.
        </p>
        <div class="project-tech">
          <span>Python</span>
          <span>Flask</span>
          <span>Heroku</span>
          <span>Travis CI</span>
          <span>numpy</span>
        </div>
      </div>
    </article>
  </div>
</Layout>

<style>
  .projects-content {
    max-width: 800px;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .section-label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-gray);
    white-space: nowrap;
  }

  .section-line {
    flex: 1;
    height: 1px;
    background-color: var(--color-dark-gray);
  }

  .project-item {
    display: flex;
    gap: 2rem;
    padding: 2.5rem 0;
    border-bottom: 1px solid var(--color-dark-gray);
  }

  .project-item:first-of-type {
    border-top: 1px solid var(--color-dark-gray);
  }

  .project-number {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-accent);
    min-width: 2rem;
    padding-top: 0.25rem;
  }

  .project-main {
    flex: 1;
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .project-year {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    color: var(--color-accent);
  }

  .meta-divider {
    color: var(--color-gray);
  }

  .project-type {
    font-size: 0.75rem;
    color: var(--color-gray);
    letter-spacing: 0.02em;
  }

  .project-name {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--color-white);
    margin: 0 0 1rem 0;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .project-description {
    color: var(--color-light-gray);
    line-height: 1.7;
    margin: 0 0 1.5rem 0;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-tech span {
    font-size: 0.7rem;
    color: var(--color-gray);
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--color-dark-gray);
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .project-item {
      padding: 2rem 0;
      gap: 1.5rem;
    }

    .project-name {
      font-size: 1.5rem;
    }

    .project-description {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .project-item {
      flex-direction: column;
      padding: 1.5rem 0;
      gap: 0.5rem;
    }

    .project-number {
      padding-top: 0;
    }

    .project-name {
      font-size: 1.25rem;
    }

    .project-description {
      font-size: 0.9rem;
    }

    .project-tech span {
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
    }
  }
</style>
