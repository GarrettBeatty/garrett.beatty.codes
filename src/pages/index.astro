---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Garrett Beatty">
  <div class="home-content">
    <section class="intro-section">
      <p class="intro-lead">Software engineer based in New York.</p>
    </section>

    <section class="links-section">
      <div class="section-header">
        <span class="section-label">Index</span>
        <div class="section-line"></div>
      </div>
      <div class="link-grid">
        <a href="/projects" class="link-card" data-internal-link data-astro-prefetch="hover">
          <span class="link-number">01</span>
          <div class="link-content">
            <span class="link-title">Projects</span>
            <span class="link-description">Technical projects and applications</span>
          </div>
          <span class="link-arrow">→</span>
        </a>
        <a href="/publications" class="link-card" data-internal-link data-astro-prefetch="hover">
          <span class="link-number">02</span>
          <div class="link-content">
            <span class="link-title">Publications</span>
            <span class="link-description">Academic research and papers</span>
          </div>
          <span class="link-arrow">→</span>
        </a>
        <a href="/GarrettBeattyResume.pdf" class="link-card">
          <span class="link-number">03</span>
          <div class="link-content">
            <span class="link-title">Resume</span>
            <span class="link-description">Professional experience</span>
          </div>
          <span class="link-arrow">→</span>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .home-content {
    max-width: 800px;
  }

  /* Intro Section - Editorial Style */
  .intro-section {
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--color-dark-gray);
  }

  .intro-lead {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-style: italic;
    color: var(--color-white);
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
  }

  .intro-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-light-gray);
    margin: 0;
    max-width: 600px;
  }

  /* Links Section */
  .links-section {
    padding-top: 4rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .section-label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-gray);
    white-space: nowrap;
  }

  .section-line {
    flex: 1;
    height: 1px;
    background-color: var(--color-dark-gray);
  }

  .link-grid {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .link-card {
    display: flex;
    align-items: center;
    padding: 1.75rem 0;
    border-bottom: 1px solid var(--color-dark-gray);
    text-decoration: none;
    transition: all 0.2s ease;
    gap: 2rem;
  }

  .link-card:first-child {
    border-top: 1px solid var(--color-dark-gray);
  }

  .link-card:hover {
    padding-left: 1rem;
    background: linear-gradient(90deg, rgba(201, 169, 98, 0.05) 0%, transparent 100%);
  }

  .link-number {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-accent);
    min-width: 2rem;
  }

  .link-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .link-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-white);
    transition: color 0.2s ease;
  }

  .link-card:hover .link-title {
    color: var(--color-accent);
  }

  .link-description {
    font-size: 0.875rem;
    color: var(--color-gray);
  }

  .link-arrow {
    font-size: 1.25rem;
    color: var(--color-gray);
    transition: all 0.2s ease;
  }

  .link-card:hover .link-arrow {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .intro-section {
      padding-bottom: 3rem;
    }

    .intro-lead {
      font-size: 1.5rem;
    }

    .intro-text {
      font-size: 1rem;
    }

    .links-section {
      padding-top: 3rem;
    }

    .link-card {
      padding: 1.5rem 0;
      gap: 1.5rem;
    }

    .link-title {
      font-size: 1.25rem;
    }

    .link-number {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .intro-lead {
      font-size: 1.25rem;
    }

    .intro-text {
      font-size: 0.95rem;
    }

    .link-card {
      padding: 1.25rem 0;
      gap: 1rem;
    }

    .link-title {
      font-size: 1.125rem;
    }

    .link-description {
      font-size: 0.8rem;
    }

    .link-arrow {
      display: none;
    }
  }
</style>
