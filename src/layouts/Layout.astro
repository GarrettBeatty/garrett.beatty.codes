---
import '../styles/subway.css';
import '../styles/subway-tiles.css';
import '../styles/subway-elements.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get current page for page title
const currentPath = Astro.url.pathname;
const pageName = currentPath === '/' ? 'Garrett Beatty' :
                 currentPath.split('/')[1].charAt(0).toUpperCase() +
                 currentPath.split('/')[1].slice(1);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Garrett Beatty - Software Engineer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="none" />
  </head>
  <body>
    <div class="site-container">
      <header class="site-header" transition:persist>
        <a href="/" class="site-logo" data-internal-link data-astro-prefetch="hover">
          <span class="logo-text">GB</span>
        </a>
        <nav class="site-nav">
          <a href="/" class="nav-link" data-internal-link data-astro-prefetch="hover">Home</a>
          <a href="/projects" class="nav-link" data-internal-link data-astro-prefetch="hover">Projects</a>
          <a href="/publications" class="nav-link" data-internal-link data-astro-prefetch="hover">Publications</a>
          <a href="/GarrettBeattyResume.pdf" class="nav-link">Resume</a>
        </nav>
      </header>

      <div class="page-header">
        <div class="page-header-content">
          <h1 class="page-title">{pageName}</h1>
          <div class="header-accent"></div>
        </div>
      </div>

      <main class="site-main">
        <slot />
      </main>

      <footer class="site-footer" transition:persist>
        <div class="footer-grid">
          <div class="footer-brand">
            <span class="footer-logo">GB</span>
            <span class="footer-tagline">New York</span>
          </div>
          <div class="footer-links">
            <a href="https://www.linkedin.com/in/garrett-beatty/" class="footer-link" target="_blank" rel="noopener noreferrer">
              LinkedIn
            </a>
            <a href="https://github.com/garrettbeatty" class="footer-link" target="_blank" rel="noopener noreferrer">
              GitHub
            </a>
          </div>
        </div>
        <div class="footer-bottom">
          <span class="footer-copyright">Â© 2024 Garrett Beatty</span>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  .site-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Header */
  .site-header {
    height: 72px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--color-dark-gray);
    position: sticky;
    top: 0;
    background-color: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    z-index: 100;
  }

  .site-logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-text {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 500;
    font-style: italic;
    color: var(--color-white);
    transition: color 0.2s ease;
  }

  .site-logo:hover .logo-text {
    color: var(--color-accent);
  }

  .site-nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-light-gray);
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-white);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Page Header - NYC Editorial Style */
  .page-header {
    padding: 4rem 0 2rem;
    border-bottom: 1px solid var(--color-dark-gray);
    position: relative;
  }

  .page-header-content {
    position: relative;
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: 4.5rem;
    font-weight: 400;
    font-style: italic;
    letter-spacing: -0.03em;
    color: var(--color-white);
    margin: 0;
    line-height: 1;
  }

  .header-accent {
    position: absolute;
    top: -1rem;
    left: 0;
    width: 40px;
    height: 3px;
    background-color: var(--color-accent);
  }

  /* Main Content */
  .site-main {
    flex: 1;
    padding: 3rem 0;
  }

  /* Footer - NYC Style */
  .site-footer {
    padding: 3rem 0 2rem;
    border-top: 1px solid var(--color-dark-gray);
  }

  .footer-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-logo {
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 500;
    font-style: italic;
    color: var(--color-white);
  }

  .footer-tagline {
    font-size: 0.7rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-gray);
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-link {
    color: var(--color-light-gray);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-accent);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--color-dark-gray);
  }

  .footer-copyright {
    color: var(--color-gray);
    font-size: 0.7rem;
    letter-spacing: 0.05em;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .site-container {
      padding: 0 1rem;
    }

    .site-header {
      flex-direction: column;
      height: auto;
      gap: 1rem;
      padding: 1rem 0;
    }

    .site-nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
    }

    .nav-link {
      font-size: 0.7rem;
    }

    .page-header {
      padding: 2.5rem 0 1.5rem;
    }

    .page-title {
      font-size: 3rem;
    }

    .header-accent {
      width: 30px;
      height: 2px;
      top: -0.75rem;
    }

    .site-main {
      padding: 2rem 0;
    }

    .footer-grid {
      flex-direction: column;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .site-footer {
      padding: 2rem 0 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .site-container {
      padding: 0 0.75rem;
    }

    .page-title {
      font-size: 2.25rem;
    }

    .site-nav {
      gap: 1rem;
    }

    .footer-links {
      gap: 1.5rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  let currentPath = window.location.pathname;

  // Handle internal navigation with subtle fade
  document.addEventListener('click', async (e) => {
    const link = e.target.closest('a[data-internal-link]');
    if (link && link.href) {
      const newPath = new URL(link.href).pathname;
      if (newPath !== currentPath) {
        e.preventDefault();

        // Subtle fade out
        gsap.to('.site-main', {
          opacity: 0,
          y: 10,
          duration: 0.2,
          ease: "power2.in",
          onComplete: () => {
            window.location.href = link.href;
          }
        });
      } else {
        e.preventDefault();
      }
    }
  });

  // Fade in on page load
  document.addEventListener('astro:after-swap', () => {
    gsap.fromTo('.site-main',
      { opacity: 0, y: 10 },
      { opacity: 1, y: 0, duration: 0.3, ease: "power2.out" }
    );
    currentPath = window.location.pathname;
  });

  // Initial page load animation
  document.addEventListener('DOMContentLoaded', () => {
    gsap.fromTo('.site-main',
      { opacity: 0, y: 10 },
      { opacity: 1, y: 0, duration: 0.3, ease: "power2.out", delay: 0.1 }
    );
  });
</script>
